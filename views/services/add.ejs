<body>
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h2>Add Service</h2>
            </div>
            <div class="card-body">
                <form method="POST" action="/services/save" enctype="multipart/form-data">
                    <label>Service</label>
                    <input class="form-control" type="input" name="service" placeholder="Add service">
                    <br>
                    <label>Description</label>
                    <input class="form-control" type="input" name="description" placeholder="Describe it">
                    <br>
                    <label>Duration</label>
                    <input class="form-control" type="number" name="duration" placeholder="How long it takes in minutes">
                    <br>
                    <label>Select picture:</label>
                    <input type="file" name="filePic" />
                    <br>
                    <input type="submit" class="btn btn-primary" value="Add">
                </form>
            </div>
        </div>
    </div>
</body>
