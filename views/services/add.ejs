<body>
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h2>Add Service</h2>
            </div>
            <div class="card-body">
                <form method="POST" action="/services/save">
                    <label>Service</label>
                    <input class="form-control" type="input" name="service" placeholder="Add service">
                    <br>
                    <label>Description</label>
                    <input class="form-control" type="input" name="description" placeholder="Describe it">
                    <br>
                    <label>Duration</label>
                    <input class="form-control" type="number" name="duration" placeholder="How long it takes in minutes">
                    <br>
                    <button class="btn btn-primary">Add</button>
                </form>
            </div>
        </div>
    </div>
</body>
